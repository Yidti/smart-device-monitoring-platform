@model IEnumerable<SmartDeviceMonitoring.Web.Models.SensorData>

@{ 
    ViewData["Title"] = "Sensor Data";
}

<h1>Sensor Data</h1>

<div class="card shadow-sm mb-3">
    <div class="card-header">
        <h5 class="mb-0">Filter Sensor Data</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="deviceId" class="form-label">Find by Device:</label>
                    @Html.DropDownList("deviceId", ViewBag.Devices as SelectList, "Select Device", new { @class = "form-select" })
                </div>
                <div class="col-md-3">
                    <label for="sensorTypeId" class="form-label">Find by Sensor Type:</label>
                    @Html.DropDownList("sensorTypeId", ViewBag.SensorTypes as SelectList, "Select Sensor Type", new { @class = "form-select" })
                </div>
                <div class="col-md-2">
                    <label for="startDate" class="form-label">Start Date:</label>
                    <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label for="endDate" class="form-label">End Date:</label>
                    <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-funnel"></i> Filter</button>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-counterclockwise"></i> Back to Full List</a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sensor!.SensorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sensor!.Device!.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sensor!.SensorType!.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sensor!.SensorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sensor!.Device!.DeviceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sensor!.SensorType!.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.DataId" class="btn btn-sm btn-outline-info" title="Details"><i class="bi bi-info-circle"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<SmartDeviceMonitoring.Web.Models.SensorData>

@{ 
    ViewData["Title"] = "Sensor Data";
}

<h1>Sensor Data</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Device: @Html.DropDownList("deviceId", ViewBag.Devices as SelectList, "Select Device", new { @class = "form-control" })
            Find by Sensor Type: @Html.DropDownList("sensorTypeId", ViewBag.SensorTypes as SelectList, "Select Sensor Type", new { @class = "form-control" })
            Start Date: <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control" />
            End Date: <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control" />
            <input type="submit" value="Filter" class="btn btn-primary" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sensor!.SensorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sensor!.Device!.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sensor!.SensorType!.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sensor!.SensorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sensor!.Device!.DeviceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sensor!.SensorType!.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.DataId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

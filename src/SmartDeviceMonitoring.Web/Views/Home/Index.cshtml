@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to Smart Device Monitoring Platform</h1>
    <p class="lead">Your central hub for real-time device monitoring and early warning systems.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-cpu-fill text-primary display-4 mb-3"></i>
                <h5 class="card-title">Device Management</h5>
                <p class="card-text">Manage all your connected devices, their locations, and descriptions.</p>
                <a asp-controller="Devices" asp-action="Index" class="btn btn-primary"><i class="bi bi-gear-fill"></i> View Devices</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-graph-up text-success display-4 mb-3"></i>
                <h5 class="card-title">Sensor Data</h5>
                <p class="card-text">Access real-time and historical data from all your sensors.</p>
                <a asp-controller="SensorData" asp-action="Index" class="btn btn-success"><i class="bi bi-bar-chart-fill"></i> View Sensor Data</a>
            </div>
        </div>
    </div>
</div>
